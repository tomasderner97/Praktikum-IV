{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run with IPython",
            "type": "shell",
            "command": "ipython3",
            "args": [
                "-i",
                "${file}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${fileDirname}",
            }
        },
        {
            "label": "Launch new IPython",
            "type": "shell",
            "command": "ipython3",
            "args": [],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${fileDirname}",
            }
        },
        {
            "label": "Run with CPython",
            "type": "shell",
            "command": "python",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${fileDirname}",
            }
        },
        {
            "label": "Build Cython code with setup.py",
            "type": "shell",
            "command": "python",
            "args": [
                "setup.py",
                "build_ext",
                "--inplace"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${fileDirname}",
            }
        },
    ]
}